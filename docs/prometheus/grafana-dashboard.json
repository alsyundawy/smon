{
  "dashboard": {
    "id": null,
    "title": "SMon Monitoring Dashboard",
    "tags": ["smon", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "smon_system_cpu_usage_percent",
            "legendFormat": "CPU Usage %"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 2,
        "title": "System Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "smon_system_memory_usage_percent",
            "legendFormat": "Memory Usage %"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 3,
        "title": "Device Status Overview",
        "type": "table",
        "targets": [
          {
            "expr": "smon_device_status{status=\"online\"}",
            "legendFormat": "{{device_id}} - Online"
          },
          {
            "expr": "smon_device_status{status=\"offline\"}",
            "legendFormat": "{{device_id}} - Offline"
          }
        ]
      },
      {
        "id": 4,
        "title": "Ping Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "smon_ping_response_time_ms",
            "legendFormat": "{{target}}"
          }
        ],
        "yAxes": [
          {
            "unit": "ms"
          }
        ]
      },
      {
        "id": 5,
        "title": "Website Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "smon_website_response_time_ms",
            "legendFormat": "{{target}}"
          }
        ],
        "yAxes": [
          {
            "unit": "ms"
          }
        ]
      },
      {
        "id": 6,
        "title": "Domain Expiry Days",
        "type": "table",
        "targets": [
          {
            "expr": "smon_domain_expiry_days",
            "legendFormat": "{{domain}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Events by Severity",
        "type": "bargauge",
        "targets": [
          {
            "expr": "smon_events_total",
            "legendFormat": "{{severity}}"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}